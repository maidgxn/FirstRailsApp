<p style="color: green"><%= notice %></p>

<h1>List of Users</h1>

<div id="users">
<table class="table table-striped table-secondary table-bordered">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Roles</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.roles %></td>
        <td><%= link_to "Profile", user %></td>
      </tr>
        <% end %>
    </tbody>
  </table>


</div>

<%= link_to "New user", new_user_path, class:"btn btn-outline-primary"%>